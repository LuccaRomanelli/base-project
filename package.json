{
  "name": "base-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "./scripts/dev.sh",
    "dev:stop": "./scripts/stop-dev.sh",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "bunx playwright test",
    "test:e2e:ui": "bunx playwright test --ui",
    "test:e2e:debug": "bunx playwright test --debug",
    "db:reset": "bunx supabase db reset",
    "db:types": "bunx supabase gen types typescript --local > src/types/supabase.ts",
    "db:studio": "bunx supabase studio",
    "deploy": "./scripts/deploy.sh",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.0",
    "@tanstack/react-form": "^1.12.0",
    "@tanstack/react-query": "^5.75.0",
    "@tanstack/react-query-devtools": "^5.75.0",
    "@tanstack/react-router": "^1.120.0",
    "@tanstack/router-devtools": "^1.120.0",
    "@tanstack/zod-form-adapter": "^0.42.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.511.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.0",
    "@tanstack/router-plugin": "^1.120.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "supabase": "^2.22.0",
    "tailwindcss": "^4.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.0",
    "vite": "^6.3.0",
    "vitest": "^3.1.0"
  }
}
